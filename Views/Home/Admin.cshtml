@model AdminViewModel

@{
    ViewData["Title"] = "Admin Page";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
@*     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"> <!-- File CSS tổng quát -->
 *@    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true"> <!-- File CSS riêng cho trang Admin -->
</head>
<body>

    <!-- Header Section -->
    <!-- Main Section -->
    <main>
        <div>
            <h1>Quản Trị Viên</h1>
            <div>
                <div>
                    <h2>Thông Tin Quản Trị Viên</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Tên Đăng Nhập</th>
                                <th>Email</th>
                                <th>Vai Trò</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.CurrentAdmin.Username</td>
                                <td>@Model.CurrentAdmin.Email</td>
                                <td>@Model.CurrentAdmin.Role</td>
                                @* <td>
                                    <button onclick="location.href='@Url.Action("EditAdmin", "Home")'">Sửa</button>
                                </td> *@
                            </tr>
                        </tbody>
                    </table>
                </div>
            <!-- Thông Tin Đơn Hàng -->
            <div>
                <h2>Thông Tin Đơn Hàng</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID Đơn Hàng</th>
                            <th>Tên Hàng</th>
                            <th>Số Lượng</th>
                            <th>Giá</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>@order.CustomerName</td>
                                <td>@order.PhoneNumber</td>
                                <td>@order.TotalAmount</td>
                                <td>@order.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Thêm Sản Phẩm Mới -->
            <div>
                <h2>Thêm Sản Phẩm Mới</h2>
                <form method="post" action="/Home/AddProduct">
                    <label for="productName">Tên Sản Phẩm:</label>
                    <input type="text" id="productName" name="productName" required />

                    <label for="productPrice">Giá Sản Phẩm:</label>
                    <input type="number" id="productPrice" name="productPrice" required />

                    <label for="productQuantity">Số Lượng:</label>
                    <input type="number" id="productQuantity" name="productQuantity" required />

                    <input type="submit" value="Thêm Sản Phẩm" />
                </form>
            </div>
        </div>
    </main>

    <!-- Footer Section -->
</body>
</html>
